#webcam-video, #overlay {
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
  position: fixed; 
  top: 5%;
  left: 0;
  z-index:15;
}

#heatmap-container {
  pointer-events: none; 
  width: 100%; 
  height: 100%; 
  margin: 0 auto; 
  position: absolute; 
  top: 0; 
  left: 0; 
  z-index: 19;
}


#interface {
  position: fixed;
  top: 100px;
  right: 0px;
  width: 200px;
  background-color: rgb(150, 206, 230);
  border-radius: 15px;
  padding: 0.5em;
  z-index: 10;
}


.button {
  border: none;
  width: 190px;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  border-radius: 8px;
}

.t-btn{
  background-color:green;
}
.h-btn{
  background-color:rgb(255,189,68);
}

.ptr-btn{
  background-color: rgb(225,142,71);
}
.p-btn{
  background-color:rgb(239,61,89);
}

.disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

body,html{
  overflow-x:hidden;
}

body{
  width: 100%;
  height: 100%;
  overflow: visible;
  font-family: 'Roboto', sans-serif;
  color: rgba(0, 0, 0, 0.8);
}


#video-toggle{
  position: fixed;
  height: 25px;
  width: 25px;
  background-color: whitesmoke;
  font-size: 20px;
  font-style: bold;
  top: 68px;
  left: 0px;
  z-index: 16;
  border: 1px solid rgba(0,0,0,1);
}

#menu-toggle{
  position: fixed;
  height: 25px;
  width: 25px;
  background-color: whitesmoke;
  font-size: 20px;
  font-style: bold;
  top: 105px;
  right: 10px;
  z-index: 16;
  border: 1px solid rgba(0,0,0,1);
}


#eyes {
  -webkit-filter: grayscale(100%); 
  filter: grayscale(100%);
  position: fixed;
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
  top: 5%;
  left: 322px;
  display: block;
  z-index: 15;
}

#pointer {
  background-color: rgba(236, 18, 18, 0.89);
  position: fixed;
  border-radius: 50%;
  height: 15px;
  width: 15px;
  transition: all 0.1s ease;
  box-shadow: 0 0 20px 10px white;
  border: 2px solid rgba(0,0,0,0.5);
  z-index: 20;
  
}


#guide {
  z-index: 999;
  background-color: lightblue;  
  position: fixed;
  height: 25%;
  width: 40%;
  top: 5%;
  left: 33%;  
  border: 2px solid rgba(0,0,0,0.5);
  font-size: 22px;
}

.dot {
  width: 25px;
  height: 25px;
  z-index: 100000;
  -webkit-border-radius: 25px;
  -moz-border-radius: 25px;
  border-radius: 25px;
  background-color: red;
  border-color: black;
  border-style: solid;
  position:fixed;
}

.c0{
  left: 0%;
}
.c1{
  left: 24%;
}
.c2{
  left: 50%;
}
.c3{
  left: 76%;
}
.c4{
  left: 98%;
}


.r0{
  top: 0%; 
}
.r1 {
  top: 35%;
}
.r2 {
  top: 65%;
}
.r3 {
  top: 97%;
}


.square {
  height: 125px;
  width: 125px;
  position:absolute;
  top: 100px;
  right: 500px;
  background-color: pink;
}
.triangle-up {
	width: 0;
	height: 0;
	position:absolute;
	bottom: 50px;
	left: 200px;
	border-left: 75px solid transparent;
	border-right: 75px solid transparent;
	border-bottom: 150px solid orange;
	
}
.circle {
  height: 125px;
  width: 125px;
  position:absolute;
  bottom: 200px;
  left: 800px;
  background-color: green;
  border-radius: 50%;
}